<% layout('layouts/main.ejs') %>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card mt-4 text-center">
            <div class="card-header">
                <h3>
                    Comprar
                </h3>
            </div>
            <div class="card-body">
                <form action="/pay" method="POST">
                    
                    <div class="form-group">
                        <label for="IDUsuario">ID Usuario</label>
                        <input type="text" name="userID" placeholder="id" value="<%= user._id%>" class="form-control text-center"  disabled>
                        <input type="hidden" name="userID" placeholder="id" value="<%= user._id%>" class="form-control text-center">
                    </div>

                    <div class="form-group">
                        <label for="Ubicacion">Ubicacion</label>
                        <input type="text" name="ubicacion" placeholder="Ingrese Ubicacion" class="form-control text-center" value="Merida">
                    </div>
                    
                    <div class="form-group">
                        <label for="Ruta">Ruta</label>
                        <select name="ruta" class="form-control">
                            <option value="Ruta 1">Ruta 1</option>
                            <option value="Ruta 2">Ruta 2</option>
                            <option value="Ruta 3">Ruta 3</option>
                            <option value="Ruta 4">Ruta 4</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block mt-4">
                        Comprar
                    </button>

                </form>
            </div>
        </div>
    </div>
</div>

